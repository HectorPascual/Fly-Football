<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="horizontal"
    android:weightSum="1"
    android:layout_margin="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/layout_bg">
    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:id="@+id/priceLinear">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="FROM"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="19sp"
            android:layout_margin="5dp"
            android:paddingTop="15dp"
            />
        <TextView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/priceOfMatch"
            tools:text="49â‚¬"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:paddingTop="12dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_toLeftOf="@id/priceLinear"
        android:layout_alignBottom="@id/priceLinear"
        android:id="@+id/linearLayout"
        android:layout_marginRight="5dp">
        <LinearLayout
            android:layout_marginLeft="38dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/team1_icon"
                tools:src=""/>
            <TextView
                android:layout_width="40dp"
                android:layout_height="50dp"
                tools:text="5"
                android:textSize="25sp"
                android:textAlignment="center"
                android:paddingTop="10dp"
                android:textStyle="bold"
                android:id="@+id/team1_score"/>

            <TextView
                android:id="@+id/team2_score"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                tools:text="2"
                android:textSize="25sp"
                android:textAlignment="center"
                android:paddingTop="20dp"
                android:textStyle="bold"
                />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/team2_icon"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:id="@+id/team1"
                tools:text="F.C. Barcelona"
                android:textSize="15sp"
                android:textAlignment="center"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/team2"
                android:layout_width="110dp"
                android:layout_height="34dp"
                android:textAlignment="center"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:text="Real Madrid"
                android:layout_weight="0.60" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linearLayout"
        android:layout_toLeftOf="@id/priceLinear"
        android:layout_toStartOf="@id/priceLinear"
        android:weightSum="1">
        <TextView
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            tools:text="Barcelona"
            android:layout_marginLeft="20dp"
            android:id="@+id/cityOfMatch"/>
        <TextView
            android:layout_width="84dp"
            android:layout_height="match_parent"
            tools:text="2017-07-15"
            android:textSize="15dp"
            android:textAlignment="textStart"
            android:gravity="start"
            android:paddingTop="0dp"
            android:textStyle="italic"
            android:id="@+id/dateOfMatch"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:text="17:45"
            android:textSize="15dp"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:paddingTop="0dp"
            android:textStyle="italic"
            android:id="@+id/hour"/>
    </LinearLayout>

</RelativeLayout>